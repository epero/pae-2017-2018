			idPersContDash = dt.id();

			var idx = dt.cell('.selected', 0).index();
			var data = dt.row(idx.row).data();
			nomPersContDash = data.prenom + " " + data.nom;
		}
	});

	dtPersContDash.on('deselect', function (e, dt, type, indexes) {
