	FrontEnd.onDisplayPage('pageDashboardStudent', function() {
		//
		existeContactAccepte=fctExisteContactAccepte();

		console.log('onDisplayPage - pageDashBoardStudent');
		$('body').removeClass().toggleClass('theme-teal');
		$('#cardDtPersCont').hide();
		$('#cardPieChart').hide();
		showNavBar();
