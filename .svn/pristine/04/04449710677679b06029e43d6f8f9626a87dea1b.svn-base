      ContactDto contactDb;
      contactDb = (ContactDto) ex.getObjetEnDb();
      req.getSession().setAttribute("contactDb", contactDb);
      renvoyerCodeErrEtMessEtObj(resp, ex, 409, contactDb, genson);
      return;
    }
    json = genson.serialize(contactsDb);
    resp.setContentType("application/json");
    resp.getOutputStream().write(json.getBytes(Charset.forName("UTF-8")));
