  private void confirmDataStageAsProf(HttpServletRequest req, HttpServletResponse resp)
      throws IOException {
    UserDto selectedStud = factory.getUserVide();
    selectedStud.setIdUtilisateur(Integer.parseInt(req.getParameter("selectedStud")));
    json = req.getParameter("stage");
    StageDto stageDto = factory.getStageVide();
    ContactDto contactDto = factory.getContactVide();

    Genson ge = new GensonBuilder().useIndentation(true).useClassMetadata(true).useRuntimeType(true)
        .exclude("dateSignature", StageImpl.class).exclude("entrepriseDto", ContactImpl.class)
        .exclude("personneContactDto", ContactImpl.class)
        .exclude("utilisateurDto", ContactImpl.class).create();
    ge.deserializeInto(json, stageDto);
    ge.deserializeInto(req.getParameter("contactAccepte"), contactDto);
    stageDto.setDateSignature(Util.jsonToLocalDate(json, "dateSignature"));
    stageDto.setUtilisateurDto(selectedStud);
    StageDto stageDb;

    try {
      stageDb = stageUcc.confirmDataStage(stageDto, contactDto);
    } catch (OptimisticLockException ex) {
      ContactDto contactDb = (ContactDto) ex.getObjetEnDb();
      req.getSession().setAttribute("contactDb", contactDb);
      renvoyerCodeErrEtMessEtObj(resp, ex, 409, contactDb, genson);
      return;
    }

    if (stageDb != null) {
      json = genson.serialize(stageDb);
      resp.setContentType("application/json");
      resp.getOutputStream().write(json.getBytes(Charset.forName("UTF-8")));
    } else {
      renvoyerCodeErrEtMess(resp, "Erreur de programmation", 500);
    }

  }

