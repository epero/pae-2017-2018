package dal.dao;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import biz.factory.BizFactory;
import biz.user.UserDTO;
import dal.services.DALServices;
import util.Util;

public class UserDAOImpl implements UserDAO {

  private DALServices dalService;
  private BizFactory factory;

  public UserDAOImpl(DALServices dalService, BizFactory factory) {
    this.dalService = dalService;
    this.factory = factory;
  }


  @Override
  public UserDTO getUser(String pseudo) {
    Util.checkString(pseudo);
    final String query = "SELECT * FROM stagify.utilisateurs WHERE pseudo = ?";
    PreparedStatement preparedStatement;
    ResultSet resultSet;
    UserDTO user;

    try {
      preparedStatement = dalService.getPrepareStatement(query);
      preparedStatement.setString(1, pseudo);
      resultSet = preparedStatement.executeQuery();
      user = (UserDTO) factory.getUser();

      if (resultSet.next()) {
        user.setPseudo(pseudo);
        user.setMdp(resultSet.getString("mdp"));
        user.setNom(resultSet.getString("nom"));
        user.setPrenom(resultSet.getString("prenom"));
        user.setDateNaissance(resultSet.getTimestamp("date_naissance"));
        user.setTel(resultSet.getString("tel"));
        user.setEmail(resultSet.getString("email"));
        user.setDateInscription(resultSet.getTimestamp("date_inscription"));
        user.setAnneeAcademique(resultSet.getString("annee_academique"));
        user.setEstAdmin(resultSet.getBoolean("est_admin"));
        user.setNbContacts(resultSet.getInt("nb_contacts"));
        return user;
      }
    } catch (SQLException ex) {
      System.out.println(
          "Une erreur s'est produite lors de la récupération de l'utilisateur dans la base données.");
    }
    return null;
  }

