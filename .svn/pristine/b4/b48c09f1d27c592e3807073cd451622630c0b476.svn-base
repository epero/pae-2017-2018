package biz.ucc;

import java.util.List;
import biz.contact.ContactDto;
import biz.user.UserDto;

public interface ContactUcc {
  /**
   * récupère et renvoie une liste de contacts pour un utilisateur donné.
   *
   * @param utilisateur ,l'utilisateur dont on recherche les contacts
   * @return une liste de contacts de l'utilisateur, cette liste est vide s'il n'y a pas de contact
   *         pour cet utilisateur
   */
  public List<ContactDto> listerContactUtilisateur(UserDto utilisateur);

  // /**
  // * récupère et renvoie une liste de contacts pour un utilisateur donné.
  // *
  // * @param idUtilisateur ,l'id de l'utilisateur dont on recherche les contacts
  // * @return une liste de contacts de l'utilisateur, cette liste est vide s'il n'y a pas de
  // contact
  // * pour cet utilisateur
  // */
  // public List<ContactDto> listerContactUtilisateur(int idUtilisateur);

  public ContactDto creerContactUtilisateur(ContactDto contact);

  /**
   * Modifie l'état du contact dont l'id est passé en paramètre
   * 
   * @param idContact l'id du contact à modifier
   * @param etat l'état à mettre à jour
   * @return le contact modifié si l'update a réussi, null sinon
   */
  public ContactDto updateEtatContact(int idContact, String etat);

  /**
   * Vérifie s'il existe un contact avec un état accepté pour l'utilisateur dont l'id est passé en
   * paramètre.
   * 
   * @param idUser l'id de l'utilisateur
   * @return true s'il existe un contact avec un état 'accepté' pour cet utilisateur
   */
  public boolean existeContactAccepte(int idUser);

}
